{% extends '_base.html.twig' %}

{% block title %}publications page{% endblock %}

{% block main %}
    <h1>This is the publications page</h1>

    <table>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Implementor Id</th>
            <th>Deadline</th>
        </tr>
        {% for publication in publications %}
            <tr>
                <td>
                    {{ publication.id }}
                </td>

                <td>
                    {{ publication.title }}
                </td>

                <td>
                    {{ publication.authorId }}
                </td>

                <td>
                    <a href="/files/twig.pdf">{{ publication.url }}</a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
